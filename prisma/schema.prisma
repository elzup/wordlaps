generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Url {
  id              Int     @id @default(autoincrement()) // SQLite の autoincrement を想定
  url             String?
  title           String?
  visit_count     Int
  typed_count     Int
  last_visit_time String
  hidden          Int

  @@map("urls")
}
